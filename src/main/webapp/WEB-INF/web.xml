<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/lib/jstl-1.2.jar</taglib-location>
        </taglib>
    </jsp-config>

    <display-name>signup</display-name>
    <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.example.web.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>
    
    <servlet>
    <servlet-name>ViewTransactionsServlet</servlet-name>
    <servlet-class>your.package.name.ViewTransactionsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ViewTransactionsServlet</servlet-name>
    <url-pattern>/ViewTransactionsServlet</url-pattern>
</servlet-mapping>

    <servlet>
    <servlet-name>DepositServlet</servlet-name>
    <servlet-class>com.example.web.DepositServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DepositServlet</servlet-name>
    <url-pattern>/DepositServlet</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>WithdrawalServlet</servlet-name>
    <servlet-class>com.example.web.WithdrawalServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>WithdrawalServlet</servlet-name>
    <url-pattern>/WithdrawalServlet</url-pattern>
</servlet-mapping>


  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.example.web.LogoutServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>CloseAccountServlet</servlet-name>
    <servlet-class>com.example.web.CloseAccountServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>CloseAccountServlet</servlet-name>
    <url-pattern>/CloseAccountServlet</url-pattern>
</servlet-mapping>
<servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.example.web.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/ChangePasswordServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- You can add more configurations below if needed -->

</web-app>
</element>
